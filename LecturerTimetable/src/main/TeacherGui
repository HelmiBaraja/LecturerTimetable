     */
public static void main(String args[]){
        TeacherGui teacherGui = new TeacherGui();
    }
    private Object lable;
    private PopupMenu lable1;
    private PopupMenu lable2;
    private PopupMenu lable3;
    private PopupMenu lable4;
public TeacherGui(){
    setLayout(new FlowLayout(FlowLayout.LEFT));
    
    JLable Lable1;
        Lable1 = new JLable("First Name");
    add(lable1);
    
    firstname = new JTextField(10);
    firstname.setText("");
    add(firstname);
    
    JLable Lable2 = new JLable("Last Name");
    add(lable2);
    
    lastname = new JTextField(10);
    lastname.setText("");
    add(lastname);
    
    JLable Lable3 = new JLable("Employee ID");
    add(lable3);
    
    id = new JTextField(10);
    id.setText("");
    add(id);
    
    JLable Lable4 = new JLable("Function");
    add(lable4);
    
    Function = new JTextField(10);
    Function.setText("");
    add(Function);
    
    JButton insert = new JButton("insert");
    add (insert);
    insert.addActionListener(new ActionListener() {
             
            @Override
            public void actionPerformed(ActionEvent e) {
                System.out.println(firstname.getText()+lastname.getText()+id.getText()+Function.getText());
}
    JButton update = new JButton("update");
    add (update);
    
    setBounds(100,100,200,300);
